---
const pages = ["Projects", "Posts", "About"];
---

<script>
  const rootHeader = document.getElementById('root-header')
  const menuButton = document.getElementById('menu-button')

  menuButton?.addEventListener('click', ()=> rootHeader?.classList.toggle('is-menu-mobile-open'))
</script>


<header class="group bg-neutral-950 text-white w-full py-8 md:py-10 " id="root-header">
  <div
    class="flex justify-between flex-row flex-wrap items-center gap-y-10 max-w-7xl mx-auto px-6"
  >
    <a href="/" class="text-2xl">Lucas</a>

    <button class="block md:hidden" id="menu-button">
      <svg
        class="w-8 h-8 block"
        width="16"
        height="16"
        fill="currentColor"
        viewBox="0 0 16 16"
      >
    
       <!-- close -->
        <path
        class="hidden group-[.is-menu-mobile-open]:block"
          d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"
        ></path>
    
    
        <!-- open -->
        <path
        class="block group-[.is-menu-mobile-open]:hidden"
          d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z"
        ></path>
      </svg>
    </button>
    
    <nav class="hidden md:block w-full md:w-auto group-[.is-menu-mobile-open]:block">
      <ul class="flex items-center flex-col md:flex-row gap-x-6 gap-y-8 md:gap-2">
        {
          pages.map((page) => (
            <li>
              <a
                href={`/${page}`}
                class="hover:bg-neutral-800 text-2xl md:text-lg px-4 py-2 rounded-full"
              >
                {page}
              </a>
            </li>
          ))
        }
      </ul>
    </nav>
  </div>
</header>
